{
	"name": "mensa-crawler",
	"version": "2.2.2",
	"private": true,
	"description": "Crawls the canteen data of student canteens in Hamburg",
	"license": "MIT",
	"repository": "HAWHHCalendarBot/mensa-crawler",
	"author": {
		"name": "EdJoPaTo",
		"email": "calendarbot@hawhh.de",
		"url": "https://calendarbot.hawhh.de"
	},
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"start": "ts-node source/index.ts",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"dependencies": {
		"array-reduce-group-by": "^1.0.0",
		"got": "^11.0.1",
		"html-entities": "^2.0.2",
		"json-stable-stringify": "^1.0.1",
		"source-map-support": "^0.5.19"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/json-stable-stringify": "^1.0.32",
		"@types/node": "^14.6.0",
		"ava": "^3.7.1",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.0",
		"ts-node": "^9.0.0",
		"typescript": "^4.2.2",
		"xo": "^0.38.2"
	},
	"nyc": {
		"all": true,
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"semicolon": false,
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
